from time import *
import random as r

def mistake(partest,usertest):
    error=0
    for i in range(len(partest)):
        try:
            if partest[i]!=usertest[i]:
                error=error+1
        except:
            error=error+1
    return error

def speed_time(time_s,time_e,userinput):  #s-> start e->end
    time_delay=time_e-time_s
    time_R=round(time_delay,2)
    speed=len(userinput)/time_R
    return round(speed)
    
while True:
    ck=input("Do you want to test your typing speed? yes/no: ")
    if ck=="yes":
        test=["Technology has become an essential part of our daily lives.",
        "From the moment we wake up to the time we go to bed,",
        "we are surrounded by digital devices that make our tasks easier and faster.",
        "The internet has connected people from all over the world, ",
        "allowing instant communication and access to unlimited information.",
        "However, it's also important to maintain a balance and not let technology control our routines. ",
        "Using it wisely can improve our productivity, creativity, and knowledge while keeping us connected to what truly matters in life."]
        test1=r.choice(test)
        print("-------------Typing Speed-----------------")
        print(test1)
        print()
        print()
        time_1=time()
        testinput=input(" Enter: ")
        time_2=time()

        print('Speed :',speed_time(time_1,time_2,testinput),"words per second")
        print("Error :",mistake(test1,testinput))

    elif ck=='no':
        print("thank you for using typing speed tester")
        break

    else:
        print("**********Invalid input**********")
